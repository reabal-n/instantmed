{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/abandoned-checkouts",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/dlq-monitor",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/retry-drafts",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/stale-queue",
      "schedule": "0 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
